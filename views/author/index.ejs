<h2>Search Authors</h2>
<form action="/author" method="get">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<% data.forEach((author) => { %>
    <div class="mt-4"><%= author.name %></div>
<% }) %>